@model InvestmentTracker.Models.InvestmentLot
@if (!string.IsNullOrEmpty(ViewData.ModelState?.Values.FirstOrDefault()?.Errors.FirstOrDefault()?.ErrorMessage))
{
    <div class="alert alert-danger">
        @Html.Raw(ViewData.ModelState?.Values.FirstOrDefault()?.Errors.FirstOrDefault()?.ErrorMessage)
    </div>
}
<h2>Add New Investment Lot</h2>

<form asp-action="Create" method="post" class="form-container">
    <div class="form-group">
        <label for="shares">Number of Shares:</label>
        <input type="number" id="shares" name="Shares" class="form-control" placeholder="Enter the number of shares" min="1" required  />
    </div>

    <div class="form-group">
        <label for="pricePerShare">Price Per Share:</label>
        <input type="number" id="pricePerShare" name="PricePerShare" class="form-control" placeholder="Enter the price per share" step="0.01" required />
    </div>

    <div class="form-group">
        <label for="purchaseDate">Purchase Date:</label>
        <input type="date" id="purchaseDate" name="PurchaseDate" class="form-control" required />
    </div>

    <button type="submit" class="btn-submit">Add Investment Lot</button>
</form>
