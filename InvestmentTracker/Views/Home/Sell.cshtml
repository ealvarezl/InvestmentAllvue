@{
    ViewData["Title"] = "Sell Shares";
}

<h2>Sell Shares</h2>

@if (!string.IsNullOrEmpty(ViewData.ModelState?.Values.FirstOrDefault()?.Errors.FirstOrDefault()?.ErrorMessage))
{
    <div class="alert alert-danger">
        @Html.Raw(ViewData.ModelState.Values.FirstOrDefault()?.Errors.FirstOrDefault()?.ErrorMessage)
    </div>
}

<form method="post" asp-action="Sell" class="form-container">
    <div class="form-group">
        <label for="sharesToSell">Number of shares to sell:</label>
        <input type="number" id="sharesToSell" name="sharesToSell" class="form-control" placeholder="Enter the number of shares" min="1" required />
    </div>

    <div class="form-group">
        <label for="sellPricePerShare">Price per share:</label>
        <input type="number" id="sellPricePerShare" name="sellPricePerShare" class="form-control" placeholder="Enter the price per share" step="0.01" required />
    </div>

    <button type="submit" class="btn-submit">Sell</button>
</form>
